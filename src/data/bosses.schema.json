{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this boss",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map location or URL",
                  "type": "string"
                },
                "mapCategory": {
                  "description": "Category identifier for map filtering",
                  "type": "string"
                },
                "mapViewer": {
                  "properties": {
                    "src": {
                      "type": "string"
                    },
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    },
                    "zoom": {
                      "type": "number"
                    }
                  },
                  "required": ["src", "x", "y"],
                  "type": "object"
                },
                "missable": {
                  "description": "Whether this boss encounter can be permanently missed",
                  "type": "boolean"
                },
                "mode": {
                  "enum": ["normal", "steel"],
                  "type": "string"
                },
                "required": {
                  "description": "Required count for completion (e.g., number of kills needed)",
                  "minimum": 1,
                  "type": "integer"
                },
                "showOnMap": {
                  "type": "boolean"
                },
                "type": {
                  "enum": ["boss", "journal"],
                  "type": "string"
                }
              },
              "required": [
                "act",
                "description",
                "flag",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
