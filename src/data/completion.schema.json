{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "cost": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "group": {
                  "description": "Identifier for mutually exclusive item groups (e.g. 'Silkshot', 'Quill', etc.)",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "missable": {
                  "description": "Whether this item can be permanently missed",
                  "type": "boolean"
                },
                "mode": {
                  "enum": ["normal", "steel"],
                  "type": "string"
                },
                "obtain": {
                  "type": "string"
                },
                "relatedFlag": {
                  "description": "Related flag for constructed items",
                  "type": "string"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "relic",
                    "materium",
                    "device",
                    "flag",
                    "quill",
                    "sceneBool"
                  ],
                  "type": "string"
                },
                "unobtainable": {
                  "description": "Whether this item cannot be obtained in the current save file",
                  "type": "boolean"
                }
              },
              "required": [
                "act",
                "description",
                "flag",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
