{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "allOf": [
                {
                  "required": ["act", "icon", "id", "label", "link", "type"]
                },
                {
                  "else": {
                    "required": ["flag"]
                  },
                  "if": {
                    "properties": {
                      "type": { "const": "key" }
                    }
                  },
                  "then": {
                    "anyOf": [
                      { "required": ["flag"] },
                      { "required": ["flags"] }
                    ]
                  }
                }
              ],
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "category": {
                  "description": "Category grouping for items",
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "flags": {
                  "description": "Array of flag names for key type items with multiple acquisition paths - if ANY flag is true, item is obtained",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "type": "array"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map URL",
                  "type": "string"
                },
                "mapCategory": {
                  "description": "Category identifier for map filtering",
                  "type": "string"
                },
                "mapViewer": {
                  "properties": {
                    "src": {
                      "type": "string"
                    },
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    },
                    "zoom": {
                      "type": "number"
                    }
                  },
                  "required": ["src", "x", "y"],
                  "type": "object"
                },
                "required": {
                  "description": "Number of required items (for type 'flagInt')",
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "showOnMap": {
                  "type": "boolean"
                },
                "type": {
                  "enum": [
                    "flag",
                    "flagInt",
                    "key",
                    "level",
                    "quest",
                    "sceneBool"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
