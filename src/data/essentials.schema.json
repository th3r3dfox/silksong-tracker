{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "allOf": [
                {
                  "else": {
                    "required": [
                      "act",
                      "flag",
                      "icon",
                      "id",
                      "label",
                      "link",
                      "type"
                    ]
                  },
                  "if": {
                    "properties": {
                      "type": { "const": "anyOf" }
                    }
                  },
                  "then": {
                    "required": [
                      "act",
                      "anyOf",
                      "icon",
                      "id",
                      "label",
                      "link",
                      "type"
                    ]
                  }
                }
              ],
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "anyOf": {
                  "description": "Array of checks for anyOf type items - if ANY check passes, item is obtained",
                  "items": {
                    "allOf": [
                      {
                        "if": {
                          "properties": {
                            "type": { "enum": ["flag", "flagInt", "level"] }
                          }
                        },
                        "then": {
                          "required": ["flag"]
                        }
                      },
                      {
                        "if": {
                          "properties": {
                            "type": { "enum": ["sceneBool", "sceneVisited"] }
                          }
                        },
                        "then": {
                          "required": ["scene"]
                        }
                      },
                      {
                        "if": {
                          "properties": { "type": { "const": "sceneBool" } }
                        },
                        "then": {
                          "required": ["flag"]
                        }
                      },
                      {
                        "if": {
                          "properties": { "type": { "const": "flagInt" } }
                        },
                        "then": {
                          "required": ["required"]
                        }
                      },
                      {
                        "if": {
                          "properties": { "type": { "const": "level" } }
                        },
                        "then": {
                          "required": ["required"]
                        }
                      }
                    ],
                    "properties": {
                      "flag": {
                        "description": "Save file flag name for flag/flagInt/level checks",
                        "type": "string"
                      },
                      "required": {
                        "description": "Required value for flagInt/level checks",
                        "minimum": 0,
                        "type": "integer"
                      },
                      "scene": {
                        "description": "Scene name for sceneBool/sceneVisited checks",
                        "type": "string"
                      },
                      "type": {
                        "enum": [
                          "flag",
                          "flagInt",
                          "level",
                          "sceneBool",
                          "sceneVisited"
                        ],
                        "type": "string"
                      }
                    },
                    "required": ["type"],
                    "type": "object"
                  },
                  "type": "array"
                },
                "category": {
                  "description": "Category grouping for items",
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map URL",
                  "type": "string"
                },
                "required": {
                  "description": "Number of required items (for type 'flagInt')",
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "anyOf",
                    "flag",
                    "flagInt",
                    "key",
                    "level",
                    "quest",
                    "sceneBool"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
