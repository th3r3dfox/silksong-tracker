{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "category": {
                  "description": "Category grouping for items",
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map URL",
                  "type": "string"
                },
                "required": {
                  "description": "Number of required items (for type 'flagInt')",
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "level",
                    "flag",
                    "key",
                    "quest",
                    "sceneBool",
                    "flagInt"
                  ],
                  "type": "string"
                }
              },
              "required": [
                "act",
                "flag",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
