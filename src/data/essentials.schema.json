{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["$schema", "categories"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "desc", "contrib", "items"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "contrib": {
            "type": "number",
            "description": "Contribution value"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "label",
                "icon",
                "flag",
                "type",
                "link",
                "act"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "scene": {
                  "type": "string",
                  "description": "Scene identifier for location-based items"
                },
                "flag": {
                  "type": "string",
                  "description": "The name of the save file flag used to track this item"
                },
                "type": {
                  "type": "string",
                  "enum": ["flag", "key", "quest", "sceneBool", "flagInt"]
                },
                "act": {
                  "type": "integer",
                  "enum": [1, 2, 3]
                },
                "description": {
                  "type": "string"
                },
                "link": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^[^\\s%]*$"
                },
                "map": {
                  "type": "string",
                  "description": "Map URL"
                },
                "category": {
                  "type": "string",
                  "description": "Category grouping for items"
                }
              }
            }
          }
        }
      }
    }
  }
}
