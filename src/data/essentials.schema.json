{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "allOf": [
                {
                  "else": {
                    "required": [
                      "act",
                      "flag",
                      "icon",
                      "id",
                      "label",
                      "link",
                      "type"
                    ]
                  },
                  "if": {
                    "properties": {
                      "type": { "const": "flagAnyOf" }
                    }
                  },
                  "then": {
                    "required": [
                      "act",
                      "flags",
                      "icon",
                      "id",
                      "label",
                      "link",
                      "type"
                    ]
                  }
                }
              ],
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "category": {
                  "description": "Category grouping for items",
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "flags": {
                  "description": "Array of flag names for flagAnyOf type items - if ANY flag is true, item is obtained",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 1,
                  "type": "array"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map URL",
                  "type": "string"
                },
                "required": {
                  "description": "Number of required items (for type 'flagInt')",
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "flagAnyOf",
                    "flag",
                    "flagInt",
                    "key",
                    "level",
                    "quest",
                    "sceneBool"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
