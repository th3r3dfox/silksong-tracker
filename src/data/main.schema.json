{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "desc": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "cost": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "exclusiveGroup": {
                  "description": "Mutually exclusive group identifier (e.g., for variant items)",
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map location or URL",
                  "type": "string"
                },
                "mode": {
                  "enum": ["normal", "steel"],
                  "type": "string"
                },
                "obtain": {
                  "type": "string"
                },
                "required": {
                  "description": "Required level for level-based items",
                  "minimum": 0,
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "level",
                    "flag",
                    "sceneBool",
                    "quest",
                    "tool",
                    "collectable",
                    "sceneVisited",
                    "flagInt"
                  ],
                  "type": "string"
                },
                "upgradeOf": {
                  "description": "ID of the base item this one upgrades",
                  "type": "string"
                }
              },
              "required": [
                "act",
                "description",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["desc", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
