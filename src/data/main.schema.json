{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "items", "label"],
        "additionalProperties": false,
        "properties": {
          "label": { "type": "string" },
          "description": { "type": "string" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "act",
                "description",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string" },
                "description": { "type": "string" },
                "act": { "enum": [1, 2, 3], "type": "integer" },
                "type": {
                  "enum": [
                    "collectable",
                    "flag",
                    "flagInt",
                    "level",
                    "anyOf",
                    "quest",
                    "sceneBool",
                    "sceneVisited",
                    "tool",
                    "journal",
                    "relic",
                    "materium",
                    "device",
                    "quill",
                    "key"
                  ],
                  "type": "string"
                },
                "icon": { "type": "string" },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "flag": { "type": "string" },
                "required": { "type": "integer", "minimum": 0 },
                "cost": { "type": "string" },
                "obtain": { "type": "string" },
                "use": { "type": "string" },
                "scene": { "type": "string" },
                "group": { "type": "string" },
                "mode": { "enum": ["normal", "steel"], "type": "string" },
                "unobtainable": { "type": "boolean" },
                "missable": { "type": "boolean" },
                "upgradeOf": { "type": "string" },
                "hornetDescription": { "type": "string" },
                "map": { "type": "string" },
                "showOnMap": { "type": "boolean" },
                "mapViewer": {
                  "type": "object",
                  "required": ["src", "x", "y"],
                  "properties": {
                    "src": { "type": "string" },
                    "x": { "type": "number" },
                    "y": { "type": "number" },
                    "zoom": { "type": "number" }
                  }
                },
                "anyOf": { "type": "array", "minItems": 1 }
              }
            }
          }
        }
      }
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
