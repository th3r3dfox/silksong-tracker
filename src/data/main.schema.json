{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "items": {
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string"
          },
          "items": {
            "items": {
              "additionalProperties": false,
              "properties": {
                "act": {
                  "enum": [1, 2, 3],
                  "type": "integer"
                },
                "anyOf": {
                  "description": "Array of checks for anyOf type items - if ANY check passes, item is obtained",
                  "items": {
                    "allOf": [
                      {
                        "if": {
                          "properties": {
                            "type": { "enum": ["flag", "flagInt", "level"] }
                          }
                        },
                        "then": {
                          "required": ["flag"]
                        }
                      },
                      {
                        "if": {
                          "properties": {
                            "type": { "enum": ["sceneBool", "sceneVisited"] }
                          }
                        },
                        "then": {
                          "required": ["scene"]
                        }
                      },
                      {
                        "if": {
                          "properties": { "type": { "const": "sceneBool" } }
                        },
                        "then": {
                          "required": ["flag"]
                        }
                      },
                      {
                        "if": {
                          "properties": { "type": { "const": "level" } }
                        },
                        "then": {
                          "required": ["required"]
                        }
                      }
                    ],
                    "properties": {
                      "flag": {
                        "type": "string"
                      },
                      "required": {
                        "minimum": 0,
                        "type": "integer"
                      },
                      "scene": {
                        "type": "string"
                      },
                      "type": {
                        "enum": [
                          "flag",
                          "flagInt",
                          "level",
                          "sceneBool",
                          "sceneVisited"
                        ],
                        "type": "string"
                      }
                    },
                    "required": ["type"],
                    "type": "object"
                  },
                  "minItems": 1,
                  "type": "array"
                },
                "cost": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "flag": {
                  "description": "The name of the save file flag used to track this item",
                  "type": "string"
                },
                "group": {
                  "description": "Identifier for mutually exclusive item groups (e.g. 'Silkshot', 'Quill', etc.)",
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "link": {
                  "format": "uri",
                  "pattern": "^[^\\s%]*$",
                  "type": "string"
                },
                "map": {
                  "description": "Map location or URL",
                  "type": "string"
                },
                "mode": {
                  "enum": ["normal", "steel"],
                  "type": "string"
                },
                "obtain": {
                  "type": "string"
                },
                "required": {
                  "description": "Required level for level-based items",
                  "minimum": 0,
                  "type": "integer"
                },
                "scene": {
                  "description": "Scene identifier for location-based items",
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "collectable",
                    "flag",
                    "flagInt",
                    "level",
                    "anyOf",
                    "quest",
                    "sceneBool",
                    "sceneVisited",
                    "tool"
                  ],
                  "type": "string"
                },
                "unobtainable": {
                  "description": "Whether this item cannot be obtained in the current save file",
                  "type": "boolean"
                },
                "upgradeOf": {
                  "description": "ID of the base item this one upgrades",
                  "type": "string"
                }
              },
              "required": [
                "act",
                "description",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "type": "object"
            },
            "type": "array"
          },
          "label": {
            "type": "string"
          }
        },
        "required": ["description", "items", "label"],
        "type": "object"
      },
      "type": "array"
    }
  },
  "required": ["$schema", "categories"],
  "type": "object"
}
