{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["$schema", "categories"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["desc", "id", "items", "label"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "act",
                "description",
                "icon",
                "id",
                "label",
                "link",
                "type"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "icon": {
                  "type": "string"
                },
                "scene": {
                  "type": "string",
                  "description": "Scene identifier for location-based items"
                },
                "flag": {
                  "type": "string",
                  "description": "The name of the save file flag used to track this item"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "level",
                    "flag",
                    "sceneBool",
                    "quest",
                    "tool",
                    "collectable",
                    "sceneVisited",
                    "flagInt"
                  ]
                },
                "act": {
                  "type": "integer",
                  "enum": [1, 2, 3]
                },
                "required": {
                  "type": "integer",
                  "description": "Required level for level-based items",
                  "minimum": 0
                },
                "description": {
                  "type": "string"
                },
                "link": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^[^\\s%]*$"
                },
                "map": {
                  "type": "string",
                  "description": "Map location or URL"
                },
                "cost": {
                  "type": "string"
                },
                "obtain": {
                  "type": "string"
                },
                "mode": {
                  "type": "string",
                  "enum": ["normal", "steel"]
                },
                "exclusiveGroup": {
                  "type": "string",
                  "description": "Mutually exclusive group identifier (e.g., for variant items)"
                },
                "upgradeOf": {
                  "type": "string",
                  "description": "ID of the base item this one upgrades"
                }
              }
            }
          }
        }
      }
    }
  }
}
