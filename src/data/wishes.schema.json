{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["$schema", "categories"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "desc", "contrib", "items"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "desc": {
            "type": "string"
          },
          "contrib": {
            "type": "number",
            "description": "Contribution value"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "label",
                "type",
                "flag",
                "icon",
                "description",
                "link",
                "act"
              ],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": ["quest", "journal"]
                },
                "flag": {
                  "type": "string",
                  "description": "The name of the save file flag used to track this wish"
                },
                "icon": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "link": {
                  "type": "string",
                  "format": "uri",
                  "pattern": "^[^\\s%]*$"
                },
                "subtype": {
                  "type": "string",
                  "description": "Subtype for tracking (e.g., 'kills' for kill count)",
                  "enum": ["kills", "seen"]
                },
                "required": {
                  "type": "integer",
                  "description": "Required count for completion (e.g., number of kills needed)",
                  "minimum": 1
                },
                "missable": {
                  "type": "boolean",
                  "description": "Whether this wish can be permanently missed"
                },
                "mode": {
                  "type": "string",
                  "enum": ["normal", "steel"]
                },
                "act": {
                  "type": "integer",
                  "enum": [1, 2, 3]
                }
              }
            }
          }
        }
      }
    }
  }
}
